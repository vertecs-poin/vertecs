{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2020",
    "lib": [
      "es7",
      "dom"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@webgpu/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "../../gl-matrix/src/types.d.ts",
    "src/test/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
